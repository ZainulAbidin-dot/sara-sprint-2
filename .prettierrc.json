{
  "semi": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "singleQuote": true,

  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/models/(.*)$",
    "^@/services/(.*)$",
    "^@/config/(.*)$",
    "^@/lib/(.*)$",
    "^@/middlewares/(.*)$",
    "^@/controllers/(.*)$",
    "^@/routes/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
